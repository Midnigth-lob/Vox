{
  "comments": {
    "lineComment": "--",
    "blockComment": ["--[[", "--]]"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(funcion|si|mientras|para|entonces|sino|hacer)\\b.*$",
    "decreaseIndentPattern": "^\\s*(fin|sino)\\b.*$"
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "onEnterRules": [
    {
      "beforeText": "^\\s*(funcion|si|mientras|para)\\b.*$",
      "afterText": "\\s*fin\\s*$",
      "action": {
        "indent": "indent"
      }
    }
  ]
}
